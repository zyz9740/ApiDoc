        "_id": {
          "type": "string"
        },
        "sample_id": {
          "type": "string",
          "description": "该tag属于哪一个sample"
        },
        "tagger_id": {
          "type": "string",
          "description": "标注者id"
        },
        "tag_time": {
          "type": "string",
          "description": "标注时间"
        },
        "begin_pos": {
          "type": "string",
          "description": "起始标注位置，语音数据用时间戳表示，图像数据用左上角坐标表示，文本数据用起始文字位置表示。",
          "example": {
            "time": "1356s",
            "location": "(0,2)",
            "bchar": "35"
          }
        },
        "end_pos": {
          "type": "string",
          "description": "结束标注位置，图像数据用右下角坐标表示，其他同上。如果不需要分段标注，可以考虑忽略这个字段或者用全部数据表示。",
          "example": {
            "time": "1365s",
            "location": "(2,3)",
            "bchar": "56"
          }
        },
        "tag": {
          "type": "string",
          "description": "标注内容，可以是文本、分类编号、打分等",
          "example": {
            "text": "string",
            "category": "string",
            "score": "integer"
          }
        }
      }
