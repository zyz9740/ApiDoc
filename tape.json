    "/api/user/login": {
      "post": {
        "tags": [
          "User Module"
        ],
        "summary": "用户登录",
        "operationId": "userLogin",
        "description": "用户登录",
        "parameters": [
          {
            "in": "query",
            "name": "body",
            "required": true,
            "description": "The two fields are required, you can also add other fileds(e.g. email).",
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A status code of 0 means the request is successful; others mean errors, if there is an error, please attach the error messages.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer"
                    },
                    "error_msg": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
