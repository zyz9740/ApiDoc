  "paths": {
    "/api/user/login": {
      "post": {
        "tags": [
          "User Module"
        ],
        "summary": "用户登录",
        "operationId": "userLogin",
        "description": "用户登录",
        "parameters": [
          {
            "in": "query",
            "name": "body",
            "required": true,
            "description": "If role is 0, the user is a teacher.",
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "role": {
                  "type": "integer"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A status code of 0 means the request is successful; others mean errors, if there is an error, please attach the error messages.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer"
                    },
                    "error_msg": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/user/register": {
      "post": {
        "tags": [
          "User Module"
        ],
        "summary": "用户注册",
        "parameters": [
          {
            "in": "query",
            "name": "body",
            "required": true,
            "description": "If role is 0, the user is a teacher.",
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "role": {
                  "type": "integer"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "If register successfully, return the user information in response data.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer"
                    },
                    "error_msg": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "username": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
