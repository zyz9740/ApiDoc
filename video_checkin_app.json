          {
            "in": "path",
            "name": "teacher_id",
            "required": true,
            "description": "",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "body",
            "required": true,
            "description": "subscribe: Value 0 means unsubscription; Value 1 means subscription.",
            "schema": {
              "type": "object",
              "properties": {
                "subscribe": {
                  "type": "integer"
